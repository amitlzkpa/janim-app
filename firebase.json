{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": "3000"
    },
    "functions": {
      "host": "localhost",
      "port": "4000"
    },
    "hosting": {
      "host": "localhost",
      "port": "5000"
    },
    "storage": {
      "port": "7000"
    },
    "database": {
      "port": "9000"
    },
    "ui": {
      "enabled": true
    }
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  },
  "functions": {
    "source": "functions"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
